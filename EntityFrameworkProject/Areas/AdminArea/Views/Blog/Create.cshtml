@using EntityFrameworkProject.ViewModels
@model BlogCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Product
                        </p>
                        <form asp-controller="Blog" asp-action="Create" enctype="multipart/form-data" class="forms-sample" method="post">
                           
                            <div class="form-group">
                                <label asp-for="Desc">Description</label>
                                <input class="form-control" asp-for="Desc">
                                <span asp-validation-for="Title" class="text-danger my-1"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Desc" class="text-danger my-1"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photos">Photo</label>
                                <input class="form-control" asp-for="Photos">
                                <span class="text-danger" asp-validation-for="Photos"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Blog" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationPartial" />
}

