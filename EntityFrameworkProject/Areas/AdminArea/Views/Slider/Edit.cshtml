@model Slider
@{
    ViewData["Title"] = "Edit";
}



<div class="container-fluid mx-5 my-3">
    <h3>Update slider</h3>
    <div class="img-area">
        <img src="~/img/@Model.Image" style="width:200px; height:200px;" alt="Alternate Text" />
    </div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group my-3">
            <input style="width:300px !important" class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <a class="btn btn-primary" asp-controller="Slider" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
